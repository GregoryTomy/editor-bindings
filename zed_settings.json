{
  "agent": {
    "always_allow_tool_actions": true,
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-thinking-latest"
    },
    "version": "2"
  },
  "buffer_font_family": "FiraCode Nerd Font Mono",
  "icon_theme": "Catppuccin Macchiato",
  "theme": "Tokyo Night Storm",
  "vim_mode": true,
  "vim": {
    "enable_vim_sneak": true
  },
  "git_panel": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "file_finder": {
    "modal_width": "medium"
  },
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": {
    "show_diagnostics": "errors"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "languages": {
    "Elixir": {
      "format_on_save": {
        "external": {
          "command": "mix",
          "arguments": ["format", "--stdin-filename", "{buffer_path}", "-"]
        }
      }
    }
  },
  "inlay_hints": {
    "enabled": true
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    }
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  }
}
