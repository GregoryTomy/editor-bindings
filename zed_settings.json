{
  "agent": {
    "always_allow_tool_actions": false,
    "model_parameters": [],
    "default_model": {
      "provider": "anthropic",
      "model": "claude-sonnet-4-latest"
    }
  },
  "buffer_font_family": "FiraMono Nerd Font Mono",
  "icon_theme": "Catppuccin Macchiato",
  "theme": "Vague",
  "buffer_font_size": 14.5,
  "vim_mode": true,
  "git_panel": {
    "dock": "right"
  },
  "git": {
    "inline_blame": { "enabled": false }
  },
  "debugger": {
    "dock": "right"
  },
  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "tab_bar": {
    "show": true
  },
  "scrollbar": {
    "show": "never"
  },
  "tabs": {
    "show_diagnostics": "errors"
  },
  "indent_guides": {
    "enabled": true,
    "coloring": "indent_aware"
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true
  },
  "terminal": {
    "env": {
      "EDITOR": "zed --wait"
    },
    "shell": {
      "program": "/opt/homebrew/bin/nu"
    },
    "dock": "right"
  },
  "file_types": {
    "Dockerfile": ["Dockerfile", "Dockerfile.*"],
    "JSON": ["json", "jsonc", "*.code-snippets"]
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "project_panel": {
    "button": true,
    "dock": "right",
    "git_status": true
  },
  "outline_panel": {
    "dock": "right"
  },
  "languages": {
    "Python": {
      "language_servers": ["pyrefly", "ruff", "!pyright", "!pylsp"],
      "format_on_save": "on",
      "formatter": [
        {
          "language_server": {
            "name": "ruff"
          }
        }
      ]
    }
  },
  "lsp": {
    "pyrefly": {
      "binary": {
        "path": "/Users/prv-GTomy/miniconda3/envs/datascience/bin/pyrefly",
        "arguments": ["lsp"]
      },
      "settings": {
        "python": {
          "pythonPath": "/Users/prv-GTomy/miniconda3/envs/datascience/bin/python"
        },
        "pyrefly": {
          "python_interpreter": "/Users/prv-GTomy/miniconda3/envs/datascience/bin/python"
        }
      }
    }
  }
}
